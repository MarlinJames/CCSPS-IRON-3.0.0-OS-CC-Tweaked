local API = fs.list("boot/api")
local API_nicknames = {}

local API_Dir = "boot/ApiDir.txt"

local file = fs.open(API_Dir,"r")

API_nicknames = textutils.unserialize(file.readAll())
file.close()

term.clear()
term.setCursorPos(1,1)
print("loading Boot API resources")
for i = 1, #API do
    print("loading: "..API[i])
    os.loadAPI(fs.complete("boot/api",API[i]))
    shell.setAlias(API_nicknames[i],fs.complete("boot/api",API[i]))
end

print("running stability check")

